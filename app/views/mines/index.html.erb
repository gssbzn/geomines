<div class="panel panel-default">
  
  <div class="panel-heading">Lista de Minas</div>

  <table class ="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Detalles</th>
        <th>Coordenadas</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @mines.each do |mine| %>
        <tr>
          <td><%= mine.name %></td>
          <td><%= mine.details %></td>
          <% coordinates = mine.latitude.to_s + ", " + mine.longitude.to_s %>
          <td><%= coordinates %></td>
          <td><%= link_to t(:show), mine %></td>
          <td><%= link_to t(:edit), edit_mine_path(mine) %></td>
          <td><%= link_to t(:destroy), mine, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  
</div>
<%= link_to 'Nueva Mina', new_mine_path, class: "btn btn-primary", role: "button" %>




