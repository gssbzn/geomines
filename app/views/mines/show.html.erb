<% if notice and notice.size != 0 %>
  <div id="notice" class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= notice %>
  </div>
<% end %>

<p>
  <strong>Nombre:</strong>
  <%= @mine.name %>
</p>

<p>
  <strong>Detalles:</strong>
  <%= @mine.details %>
</p>

<p>
  <strong>Latitud:</strong>
  <%= @mine.latitude %>
</p>

<p>
  <strong>Longitud:</strong>
  <%= @mine.longitude %>
</p>

<%= link_to t(:edit), edit_mine_path(@mine) %> |
<%= link_to t(:back), mines_path %>

<%= render partial: "mine_resources/resources", locals: {mine_resources: @mine.mine_resources} %>