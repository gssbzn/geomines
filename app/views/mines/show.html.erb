<% if notice and notice.size != 0 %>
  <div id="notice" class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= notice %>
  </div>
<% end %>

<h3>
  <%= @mine.name %>
  <%= link_to ' ', edit_mine_path(@mine), class:"btn btn-default glyphicon glyphicon-edit", role:"button" %>
</h3>

<p>
  <strong>Detalles:</strong>
  <%= @mine.details %>
</p>

<p>
  <strong>Ubicaci&oacute;n:</strong>
  <%= @mine.latitude.to_s + ", " + @mine.longitude.to_s %>
</p>

<%= render partial: "mine_resources/resources", locals: {mine_resources: @mine.mine_resources} %>

<%= link_to t(:back), mines_path %>