<%= form_for([@mine,@mine_resource], html: {role:"form"}) do |f| %>
  <% if @mine_resource.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong><%= pluralize(@mine_resource.errors.count, "error") %></strong> impidieron guardar este recurso:
      <ul>
      <% @mine_resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mineral, class:"control-label" %><br>
    <%= f.collection_select :mineral_id, Mineral.all.order(:name), :id, :name, {}, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :conditions, class:"control-label" %><br>
    <%= f.text_field :conditions, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :daily_capacity, class:"control-label" %><br>
    <%= f.text_field :daily_capacity, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :monthly_capacity, class:"control-label" %><br>
    <%= f.text_field :monthly_capacity, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-primary', :disable_with => 'Guardando...' %>
  </div>
<% end %>
