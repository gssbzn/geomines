<% if notice and notice.size != 0 %>
  <div id="notice" class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= notice %>
  </div>
<% end %>

<h3>
  <%= @mine_resource.mineral.name %>
  <%= link_to ' ', edit_mine_resource_path(@mine_resource), class:"btn btn-default glyphicon glyphicon-edit", role:"button" %>
</h3>

<p>
  <strong>Condiciones:</strong>
  <%= @mine_resource.conditions %>
</p>

<p>
  <strong>Capacidad Diaria:</strong>
  <%= @mine_resource.daily_capacity %>
</p>

<p>
  <strong>Capacidad Mensual:</strong>
  <%= @mine_resource.monthly_capacity %>
</p>

